# basic slicing
text = "Blue Ocean"
print(text[0:4])
print(text[5:10])

# omitting start
print(text[:4])

# omitting end
print(text[5:])

# negative indices
print(text[-5:]) # from the 5th character from the end to the end
print(text[:-6])

# steps in slicing
# a positive step moves from left to right; a negative step moves from right to left.

print(text[1:6:1])
print(text[::-1]) # reverses the entire string
